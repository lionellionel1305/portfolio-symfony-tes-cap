{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block javascripts %}
    {{ parent() }} {# Charge les scripts du parent en premier #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const togglePassword = document.getElementById('togglePassword');
            const passwordField = document.getElementById('password');

            if (!togglePassword || !passwordField) {
                console.error("Élément introuvable !");
                return;
            }

            togglePassword.addEventListener("click", function () {
                const type = passwordField.type === "password" ? "text" : "password";
                passwordField.type = type;
                this.classList.toggle("fa-eye-slash");
            });
        });
    </script>
{% endblock %}
{% block body %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
<div class="container">
    <div class="row justify-content-center" style="margin-top: 50px;">
        <div class="col-md-8">
            <div class="card shadow" style="min-height: 500px;">
                <div class="card-header text-white text-center py-4" style="background-color: #cacfd2;">
                    <h3 class="mb-0" style="color: #000;">Identification administrateur</h3>
                </div>
                <div class="card-body p-5">
                    <form method="post" action="{{ path('app_login') }}">
                        {% if error %}
                            <div class="alert alert-danger">
                                {% if error.messageKey == 'Invalid credentials.' %}
                                    Identifiants incorrects. Veuillez réessayer.
                                {% else %}
                                    {{ error.messageKey|trans(error.messageData, 'security') }}
                                {% endif %}
                            </div>
                        {% endif %}

                        {% if app.user %}
                            <div class="alert alert-info mb-4">
                                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnecter</a>
                            </div>
                        {% endif %}

                        <div class="form-group mb-4">
                            <label for="username" class="form-label h5 mb-3">Email</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input type="email" value="{{ last_username }}" name="_username" id="username" 
                                       class="form-control form-control-lg" autocomplete="email" required autofocus>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label for="password" class="form-label h5 mb-3">Password</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                                <input type="password" name="_password" id="password" 
                                       class="form-control form-control-lg" autocomplete="current-password" required>
                                <span class="input-group-text">
                                    <i class="fas fa-eye" id="togglePassword" style="cursor: pointer;"></i>
                                </span>
                            </div>
                        </div>

                        <div class="form-check mb-4">
                            <input type="checkbox" class="form-check-input" name="_remember_me" id="remember_me">
                            <label class="form-check-label h6" for="remember_me">Se souvenir de moi</label>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="text-center mt-4">
                            <button class="btn btn-warning btn-lg py-3 fs-5" type="submit" style="width: 50%;">
                                Se Connecter
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}