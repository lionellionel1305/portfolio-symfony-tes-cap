{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
   <div class="container text-center mt-4">
        <div class="row mt-4">
            <div class="col-13">
                <h1 class="text-black">Quelques adresses utiles</h1>
            </div>
        </div>
        <div class="d-flex gap-2 col-3">
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('document_new') }}" class="bouton_ajouter_photo btn btn-primary">Ajouter un document</a>
    {% endif %}
</div>
<br>
    <div class="photo-gallery">
        {% for document in documents %}
         <div class="photo-gallery col-6 mb-1">

                <a href="{{ asset('uploads/documents/' ~ document.filePath) }}" target="_blank">
                    <img src="{{ asset('img/accueil/PDF.webp') }}" alt="PDF Icon" style="width: 30; height: 50px; margin-right: 15px;">
                    <h3>{{ document.titre }}</h3>
                </a>
                {% if is_granted('ROLE_ADMIN') %}
                <form action="{{ path('document_delete', {'id': document.id}) }}" method="post" style="display:inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ document.id) }}">
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
                 {% endif %}
        </div>
        {% endfor %}
    </div>
{% endblock %}