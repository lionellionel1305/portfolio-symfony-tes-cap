{% extends 'base.html.twig' %}

{% block title %}Autres liens{% endblock %}

{% block body %}
   <div class="container text-center mt-2">
            <div class="row mt-4">
            <div class="col-13">
                <h1 class="text-black">{{ titre }}</h1>
            </div>
        </div>
                <div class="col-12 mt-5">
                    <h4>{{ description|linkify|nl2br }}</h4><br>
                    <h4><strong><u>{{ description1|linkify|nl2br }}</u></strong></h4>
                    <h4>{{ description2|linkify|nl2br }}</h4><br>
                    <h4><strong><u>{{ description3|linkify|nl2br }}</u></strong></h4>
                    <h4>{{ description4|linkify|nl2br }}</h4><br>

                </div>
            </div>
        </div>

        <div class="buton_modifier_dys">
            <div class="col-12"> <!-- Utilisation de col-12 pour une colonne pleine largeur -->
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_BUREAU') %}
                    <div class="container_dys_description_button text-center">
                        <a href="{{ path('app_autres_lien_dys_edit') }}" class="boutton_dys btn btn-primary btn-lg">Modifier</a>
                    </div>
                {% endif %}
            </div>
        </div>
       
    </div>
{% endblock %}