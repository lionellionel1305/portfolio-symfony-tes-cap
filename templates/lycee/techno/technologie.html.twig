{% extends 'base.html.twig' %}

{% block title %}Technologie{% endblock %}

{% block body %}
<div class="container">
    {% if lyceeTechno is not empty %}
        {% for key, lyceeTechno in lyceeTechno %}
            <div class="col-11">
                <div class="row">
                    <div class="col-12 text-center">
                        <div>
                            <h1 class="custom-title">{{ lyceeTechno.editableTitle | default('Titre non défini') }}</h1>
                        </div>

                        <div class="container_dys_description">
                            <h5>{{ lyceeTechno.description | default('') | linkify | nl2br }}</h5>
                            <h5>{{ lyceeTechno.description1 | default('') | linkify | nl2br }}</h5>
                            <h5>{{ lyceeTechno.description2 | default('') | linkify | nl2br }}</h5>
                            <h5>{{ lyceeTechno.description3 | default('') | linkify | nl2br }}</h5>
                            <h5>{{ lyceeTechno.description4 | default('') | linkify | nl2br }}</h5>
                            <h5>{{ lyceeTechno.description5 | default('') | linkify | nl2br }}</h5>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <p>Aucune entrée trouvée pour Technologie.</p>
    {% endif %}

    <div class="buton_modifier_dys">
        <div class="col-12">
            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_BUREAU') %}
                <div class="container_dys_description_button text-center">
                    <a href="{{ path('app_lyceeTechno_edit') }}" class="boutton_dys btn btn-primary btn-lg">Modifier</a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
